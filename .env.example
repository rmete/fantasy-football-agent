# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fantasy_football
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# AI/LLM (REQUIRED - Get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Anthropic Model Selection (Optional - defaults to Claude Sonnet 4.5)
# Options: "claude-sonnet-4-5-20250929", "claude-3-5-sonnet-20241022", "claude-3-5-haiku-20241022"
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Sleeper (REQUIRED - Your Sleeper username)
SLEEPER_USERNAME=your_sleeper_username

# Optional External APIs
TAVILY_API_KEY=your_tavily_api_key_here
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=FantasyFootballAI/1.0

# Application
DEBUG=True
LOG_LEVEL=INFO
